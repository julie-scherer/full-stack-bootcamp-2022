   "source": [
    "class Plurality():\n",
    "    def __init__(self, item='') -> None:\n",
    "        self.item = item\n",
    "\n",
    "    def singular(self):\n",
    "        if self.item[-1] != 's':\n",
    "            pass\n",
    "        elif self.item[-3] == 'i' and self.item[-2] == 'e' and self.item-[1] == 's':\n",
    "            self.item = self.item.rstrip('ies') + 'y'\n",
    "        elif self.item[-3] == 'o' and self.item[-2] == 'e' and self.item[-1] == 's':\n",
    "            self.item = self.item.rstrip('es')\n",
    "        elif self.item[-1] == 's':\n",
    "            self.item = self.item.rstrip('s')\n",
    "        return self.item\n",
    "\n",
    "    def plural(self):\n",
    "        if self.item[-1] == 's':\n",
    "            pass\n",
    "        elif self.item[-3] == 'a' and self.item[-2] == 't' and self.item[-1] == 'o':\n",
    "            self.item = self.item + 'es'\n",
    "        elif self.item[-1] == 'y':\n",
    "            self.item = self.item.rstrip('y') + 'ies'\n",
    "        elif self.item[-2] == 'c' and self.item[-1] == 'h':\n",
    "            self.item = self.item + 'es'\n",
    "        else:\n",
    "            self.item = self.item + 's'\n",
    "        return self.item\n",
    "\n",
    "class Cart():\n",
    "    def __init__(self, shop_list) -> None:\n",
    "        self.shop_list = shop_list\n",
    "\n",
    "    ### ADD ITEM TO GROCERY LIST\n",
    "    def add_item(self):\n",
    "        item = input(f\"What would you like to add to your cart? \").lower()\n",
    "        for char in item:\n",
    "            if char.isdigit():\n",
    "                item = input(f\"This is an invalid response (contains numeric values). Please enter the name of the item you would like to add. \").lower()\n",
    "\n",
    "        item = Plurality(item).singular()\n",
    "\n",
    "        no_items = input(f\"Please enter the number of {Plurality(item).plural()} you would like to add. \")\n",
    "        try:\n",
    "            int(no_items)\n",
    "        except:\n",
    "            no_items = input(f\"This is an invalid response. Please enter a number. \")\n",
    "        no_items = int(no_items)\n",
    "\n",
    "        cost = input(f\"Please enter the cost per {Plurality(item).singular()} in $0.00 format. \").strip('$')\n",
    "        try:\n",
    "            round(float(cost) * no_items, 2)\n",
    "        except:\n",
    "            cost = input(\"This is an invalid response. Please resubmit your answer in $0.00 format. \").strip('$')\n",
    "        \n",
    "        total_cost = round(float(cost) * no_items, 2)\n",
    "        \n",
    "        self.shop_list[item] = {'No':no_items, 'Cost':total_cost}\n",
    "        print(f\"{no_items}x {item.capitalize()} added to your cart.\")\n",
    "        return self.shop_list\n",
    "\n",
    "    ### REMOVE ITEM FROM GROCERY LIST\n",
    "    def remove_item(self):\n",
    "        item = input(f\"What would you like to remove? Please enter one item. \").lower()\n",
    "        \n",
    "        for char in item:\n",
    "            if char.isdigit():\n",
    "                item = input(f\"This is an invalid response (contains numeric values). Please enter the name of the item you would like to remove. \").lower()\n",
    "\n",
    "        if self.shop_list.get(item) == None:\n",
    "            get_error = input(f\"You do not have '{item}' in your cart. Please enter an existing item in your cart or type 'exit' to return to the main menu. \").lower()\n",
    "            if get_error == 'exit':\n",
    "                return self.shop_list\n",
    "            else:\n",
    "                item = get_error\n",
    "\n",
    "        cur_no_items = self.shop_list[item]['No']\n",
    "        no_items = input(f\"Please enter the number of {Plurality(item).plural()} you would like to remove. \")\n",
    "        try:\n",
    "            int(no_items)\n",
    "        except:\n",
    "            no_items = input(f\"This is an invalid response. Please enter a number. \")\n",
    "        new_no_items = int(no_items)\n",
    "        \n",
    "        if new_no_items == cur_no_items:\n",
    "            del self.shop_list[item]\n",
    "            print(f\"1 {Plurality(item).singular()} has been removed from your cart.\") if cur_no_items == 1 else print(f\"{cur_no_items} {Plurality(item).plural()} have been removed from your cart.\")\n",
    "        \n",
    "        elif new_no_items > cur_no_items:\n",
    "            num_error = input(f\"Invalid response. You only have {cur_no_items} {Plurality(item).plural() if cur_no_items > 1 else Plurality(item).singular()} in your cart. Please re-enter the number of items you would like to remove or type 'exit' to return to the main menu. \")\n",
    "            if num_error.lower() == 'exit':\n",
    "                return self.shop_list\n",
    "            else:\n",
    "                item = int(num_error)\n",
    "        \n",
    "        else:\n",
    "            old_cost = self.shop_list.get(item.lower()).get('Cost')\n",
    "            new_cost = (old_cost / cur_no_items) * new_no_items\n",
    "            self.shop_list[item] = {'Cost':new_cost, 'No':new_no_items}\n",
    "            print(f\"You now have 1 {Plurality(item).singular()} in your cart.\") if new_no_items == 1 else print(f\"You now have {new_no_items} {Plurality(item).plural()} in your cart.\")\n",
    "        return self.shop_list\n",
    "\n",
    "    ### SHOW CART\n",
    "    def view_cart(self):\n",
    "        if len(self.shop_list) == 0:\n",
    "            print(\"There are no items in your cart.\")\n",
    "        else:\n",
    "            total_cost = 0\n",
    "            print(\"\\nYour current cart:\")\n",
    "            for key, value in self.shop_list.items():\n",
    "                no_items = value['No']\n",
    "                cost = value['Cost']\n",
    "                total_cost += cost\n",
    "                if no_items == 1:\n",
    "                    print(\"{}x {} (${:.2f})\".format(no_items, Plurality(key).singular().title(),cost))\n",
    "                else:\n",
    "                    print(\"{}x {} (${:.2f})\".format(no_items, Plurality(key).plural().title(),cost))\n",
    "            tax = total_cost * .08\n",
    "            print(\"-------------------\")\n",
    "            print(\"Subtotal = ${:.2f}\".format(total_cost))\n",
    "            print(\"Tax      = ${:.2f}\".format(tax))\n",
    "            print(\"Total    = ${:.2f}\\n\".format(total_cost + tax))\n",
    "        return self.shop_list\n",
    "\n",
    "\n",
    "##########################################################\n",
    "### RUN ################################################## \n",
    "##########################################################\n",
    "\n",
    "def main():\n",
    "    cart1 = Cart(shop_list={})\n",
    "    cart1.add_item()\n",
    "    while True:\n",
    "        action = input(\"What would you like to do? add/remove/view/clear/quit  \").lower()\n",
    "        if ((action == 'add') or (action == 'remove') or (action == 'view') or (action == 'clear') or (action == 'quit')) == False:\n",
    "            action = input(\"This is an invalid response. Please enter add, remove, view, clear, or quit. \")\n",
    "        if action == \"add\":\n",
    "            cart1.add_item()\n",
    "        elif action == \"remove\":\n",
    "            cart1.remove_item()\n",
    "        elif action == \"view\":\n",
    "            cart1.view_cart()\n",
    "        elif action == \"clear\":\n",
    "            cart1.clear_cart()\n"
    "        elif action == \"quit\":\n",
    "            print(\"Thank you for shopping with us!\")\n",
    "            break\n",    
    "\n",
    "main()"
   ]
